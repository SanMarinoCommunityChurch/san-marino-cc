---
import SectionPage from "../../layouts/SectionPage.astro";
import WelcomeQuestionsImage from "../../components/WelcomeQuestionsImage.astro";
import { contact } from "../../lib/settings";
import { PortableText } from "astro-portabletext";
---

<SectionPage
  currentPage={"c27d6639-bd40-454d-b210-63ca75b0dbbd"}
  localNavSection="Utility"
>
  <div>
    <div class="contact-info">
      <div>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6606.317427444416!2d-118.11509741454164!3d34.11668631239753!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2c4cbbc2e5e83%3A0xa506500431a79522!2s1750%20Virginia%20Rd%2C%20San%20Marino%2C%20CA%2091108!5e0!3m2!1sen!2sus!4v1689104480012!5m2!1sen!2sus"
          width="600"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div class="flow text">
        <div class="flow">
          <h2 class="text-step-3">Find Us</h2>
          <div class="grid">
            <PortableText value={contact.info} />
          </div>
        </div>
        <div class="flow">
          <h2 class="text-step-3">Hours</h2>
          <div class="grid">
            <PortableText value={contact.hours} />
          </div>
        </div>
      </div>
    </div>
    <div id="forms">
      <WelcomeQuestionsImage />
    </div>
  </div>
</SectionPage>

<style>
  .contact-info {
    display: grid;
    grid-template-columns: 1fr 1.25fr;
    gap: 5rem;
  }

  .flow.text > :last-child {
    margin-top: var(--space-2xl);
  }

  iframe {
    width: 100%;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 3fr;
    gap: 1rem;
  }

  @media (max-width: 1024px) {
    .contact-info {
      grid-template-columns: 1fr;
    }

    .contact-info > :last-child {
      order: 1;
    }

    .contact-info > :first-child {
      order: 2;
    }
  }
</style>
