---
import Button from "./Button.astro";
import { Image, Picture } from "@astrojs/image/components";
import placeholderImg from "../assets/images/windows.jpg";

const themes = {
  light: "light",
  dark: "dark",
};

const layouts = {
  "image-left": "image-left",
  "image-right": "image-right",
};

const decorations = {
  "1": "decoration-1",
  "2": "decoration-2",
};

const {
  theme = "light",
  layout = "image-left",
  imgSrc = placeholderImg,
  imgAlt = "",
  href,
} = Astro.props;
---

<article
  class="feature"
  data-theme={themes[theme]}
  data-layout={layouts[layout]}
>
  <a href={href} class="frame img-link">
    <Picture
      src={imgSrc}
      alt={imgAlt}
      widths={[600, 900]}
      sizes="100vw"
      class="feature-img"
      aspectRatio="7:5"
    />
  </a>
  <div class="feature-text flow">
    <div class="feature-header flow">
      <header>
        <slot name="header">Feature title</slot>
      </header>
      <div>
        <slot name="body"
          >Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem
          ipsum dolor sit amet</slot
        >
      </div>
    </div>
    <footer class="feature-link cluster">
      <Button
        href={href}
        style="none"
        theme={themes[theme] == "light" ? "primary" : "primary-light"}
        size="none"
      >
        <slot name="CTA">Learn More</slot>
      </Button>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 448 512"
        aria-hidden="true"
        width="14"
        height="14"
        fill={themes[theme] == "light"
          ? "var(--color-primary-900)"
          : "var(--color-primary-100)"}
        ><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
        <path
          d="M440.6 273.4c4.7-4.5 7.4-10.8 7.4-17.4s-2.7-12.8-7.4-17.4l-176-168c-9.6-9.2-24.8-8.8-33.9 .8s-8.8 24.8 .8 33.9L364.1 232 24 232c-13.3 0-24 10.7-24 24s10.7 24 24 24l340.1 0L231.4 406.6c-9.6 9.2-9.9 24.3-.8 33.9s24.3 9.9 33.9 .8l176-168z"
        ></path></svg
      >
    </footer>
  </div>
  <div class={themes[theme] == "light" ? "overlay-right" : "overlay-left"}>
  </div>
  <div class="feature-bg"></div>
</article>

