  [data-theme="dark"] {
    color: var(--color-primary-100);
  }

  [data-theme="dark"] .feature-bg {
    background-color: var(--color-primary-900);
  }

  [data-layout="image-right"] .frame {
    order: 2;
  }

  [data-layout="image-right"] .feature-text {
    order: 1;
    padding-left: 0;
    padding-right: 1rem;
    grid-column: 2 / span 3;
  }

  [data-layout="image-right"] .feature-bg {
    grid-column: 1/6;
  }

  footer.cluster {
    --cluster-space: 6px;
  }

  .feature-img {
    border-radius: var(--rounded-corners);
    box-shadow: var(--shadow-none);
    object-fit: cover;
    transition: box-shadow 0.3s ease;
  }

  .feature-img:hover {
    box-shadow: var(--shadow-large);
  }

  .feature-link {
    width: fit-content;
  }

  .feature-link svg {
    transition: transform 0.2s ease;
  }

  .feature-link:hover {
    opacity: 0.7;
  }

  .feature-link:hover svg {
    transform: translateX(3px);
  }

  .img-link img {
    transition: transform 0.3s ease;
  }

  .img-link:hover img {
    transform: scale(1.06);
  }

  @media (max-width: 1024px) {
    .feature {
      padding-block: 0;
      gap: 0;
    }

    .frame {
      grid-column: span 7;
    }

    .frame,
    .feature-img {
      border-top-left-radius: var(--rounded-corners);
      border-top-right-radius: var(--rounded-corners);
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
    }

    .feature-text {
      grid-column: span 7;
      padding: 2rem;
    }

    .feature-bg {
      grid-column: span 7;
    }

    [data-layout="image-right"] .frame {
      order: 1;
    }

    [data-layout="image-right"] .feature-text {
      order: 2;
      padding: 2rem;
      grid-column: span 7;
    }

    [data-layout="image-right"] .feature-bg {
      grid-column: span 7;
    }
  }
</style>
