    position: relative;
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 2rem;
    align-items: center;
    padding-block: 4rem;
  }

  .frame {
    --width: 7;
    --height: 5;
    border-radius: var(--rounded-corners);
    grid-column: span 3;
  }

  .feature-text {
    grid-column: span 3;
    padding-left: 1rem;
    padding-right: 0;
  }

  .feature-text.flow {
    --flow-space: var(--space-l);
  }

  .feature-header.flow {
