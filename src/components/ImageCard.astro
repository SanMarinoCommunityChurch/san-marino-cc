---
const placeholderImg =
  "https://images.unsplash.com/photo-1529070538774-1843cb3265df?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=900&q=80";

const {
  imgSrc = placeholderImg,
  imgAlt = "",
  title = "Title",
  description = "Description",
  href = "#",
} = Astro.props;
---

<article class="img-card">
  <a href={href} class="flow">
    <div class="frame">
      <img src={imgSrc} alt={imgAlt} />
    </div>
    <div class="cluster">
      <h3 class="text-step-2">{title}</h3>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 448 512"
        width="16"
        height="16"
        fill="var(--svg-fill)"
        ><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
        <path
          d="M440.6 273.4c4.7-4.5 7.4-10.8 7.4-17.4s-2.7-12.8-7.4-17.4l-176-168c-9.6-9.2-24.8-8.8-33.9 .8s-8.8 24.8 .8 33.9L364.1 232 24 232c-13.3 0-24 10.7-24 24s10.7 24 24 24l340.1 0L231.4 406.6c-9.6 9.2-9.9 24.3-.8 33.9s24.3 9.9 33.9 .8l176-168z"
        ></path></svg
      >
    </div>
    <p class="text-step--1">{description}</p>
  </a>
</article>

<style>
  .img-card {
    max-width: 30rem;
  }

  .img-card a {
    text-decoration: none;
    border-radius: var(--rounded-corners);
    background-color: transparent;
    padding: 0.75rem;
    transition: background-color 0.2s ease;
  }

  .img-card:hover a {
    background-color: var(--color-primary-100);
  }

  .img-card:hover svg {
    transform: translateX(5px);
  }

  .img-card:hover .frame img {
    transform: scale(1.05);
  }

  .frame {
    --width: 8;
    --height: 5;
    border-radius: var(--rounded-corners);
  }

  .frame img {
    border-radius: var(--rounded-corners);
    transition: transform 0.3s ease;
  }

  .cluster {
    --cluster-space: 9px;
  }

  svg {
    --svg-fill: var(--color-primary-400);
    transition: transform 0.2s ease;
  }
</style>
