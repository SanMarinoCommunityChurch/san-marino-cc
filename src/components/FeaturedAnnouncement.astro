    left: 0;
    top: 0;
    z-index: -1;
    opacity: 0.07;
    width: 25%;
    height: 100%;
    mask-image: linear-gradient(90deg, #000, transparent);
  }

  @media (max-width: 840px) {
    .grid {
      flex-wrap: wrap;
    }

    .featured-announcement-banner {
      & .about {
        flex-basis: 100%;
      }
    }
  }

  @media (max-width: 640px) {
    .featured-announcement-banner {
      & .announcement-link {
        min-height: 0;
      }
    }

    .bg-overlay {
      width: 100%;
      height: 30%;
      mask-image: linear-gradient(to bottom, #000, transparent);
    }
  }
</style>
