---
const placeholderImg =
  "https://images.unsplash.com/photo-1529070538774-1843cb3265df?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=900&q=80";

const {
  href = "/",
  img = placeholderImg,
  imgAlt = "",
  title = "Event Title",
} = Astro.props;
---

<article class="card">
  <a href={href}>
    <slot name="label" />
    <div class="frame">
      <img src={img} alt={imgAlt} />
    </div>
    <div class="text">
      <header>
        <slot name="header">
          <div class="small-title">Category</div>
        </slot>
        <h3 class="card-title text-step-2">{title}</h3>
      </header>
      <slot name="body">
        <p class="text-step--1">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Sed maxime
          quam quisquam vero recusandae est!
        </p></slot
      >
      <footer>
        <slot name="footer">
          <div class="text-step--1">Footer</div>
        </slot>
      </footer>
    </div>
  </a>
</article>

<style>
  .card {
    position: relative;
    max-width: 30rem;
    border-radius: var(--rounded-corners);
    box-shadow: 0px 4px 16px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    background: var(--color-white);
    transition: box-shadow 0.3s ease-in-out;
  }

  .card-title {
    margin-bottom: 8px;
  }

  .card a {
    text-decoration: none;
  }

  .frame {
    --width: 5;
    --height: 3;
  }

  .frame img {
    transition: transform 0.2s ease-in-out;
  }

  .text {
    padding: 1.75rem;
  }

  .text header {
    margin-bottom: 1rem;
  }

  .text footer {
    margin-top: 2rem;
  }

  .card:hover {
    box-shadow: 0px 4px 32px rgba(0, 0, 0, 0.12);
  }

  .card:hover .frame img {
    transform: scale(1.05);
  }

  .card:hover .card-title {
    text-decoration: underline;
  }
</style>
