---
import { urlFor } from "../lib/sanity";
// import ImageOpt from "./ImageOpt.astro";
import { Image } from "astro:assets";
const props = Astro.props;
const image = props.node.asset;
---

<Image
  src={urlFor(image)
    .width(900)
    .height(Math.floor(900 / image.metadata.dimensions.aspectRatio))
    .auto("format")
    .url()}
    width={900}
    height={Math.floor(900 / image.metadata.dimensions.aspectRatio)}
    format="webp"
  alt={image.altText || ""}
/>

<style>
  img {
    border-radius: var(--rounded-corners);
  }
</style>
