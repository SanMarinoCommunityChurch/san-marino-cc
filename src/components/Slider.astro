---
import { urlFor } from "../lib/sanity";
import PostCategory from "../components/PostCategory.astro";
import { allPostTypes } from "../lib/posts";
const { heading, description, slides } = Astro.props;
---

<section class="splide resources-slider" aria-labelledby="slider-heading">
  <header class="content-wrapper center-items flow">
    <div>
      <h2 id="slider-heading" class="text-step-4">{heading}</h2>
      <p class="paragraph flow">{description}</p>
    </div>
    <ul class="cluster types">
      <li>
        <PostCategory
          href="/resources"
          size="large"
          position="relative"
          name="All"
        />
      </li>
      {
        allPostTypes.map((type, index) => {
          return (
            <li>
              <PostCategory
                href={`/resources/${type.slug}`}
                size="large"
                position="relative"
                name={type.name}
                theme={"default"}
              />
            </li>
          );
        })
      }
    </ul>
  </header>
  <div class="margin-top relative">
    <div class="splide__arrows"></div>
    <div class="splide__track">
      <ul class="splide__list">
        {
          slides.map((slide) => (
            <li class="splide__slide">
              <a href={`/resources/${slide.slug}`} class="">
                <PostCategory
                  slot="label"
                  name={slide.category.name}
                  theme={"default"}
                />
                <div class="slide-text flow">
                  <h3 class="text-step-3 color-white">{slide.name}</h3>
                  <p>{slide.preview}</p>
                </div>
                <div class="overlay" />
                <div class="img-wrapper">
                  <img
                    class="img"
                    src={urlFor(slide.image)
                      .width(900)
                      .height(675)
                      .auto("format")
                      .url()}
                    width={900}
                    height={675}
                    alt={slide.image.asset.altText || slide.name || ""}
                    style={`background-image: url(${slide.image.asset.metadata.lqip})`}
                  />
                </div>
              </a>
            </li>
          ))
        }
      </ul>
      <ul class="splide__pagination"></ul>
    </div>
  </div>
</section>

<style>
  .margin-top {
    margin-top: 3rem;
  }

  .relative {
    position: relative;
  }

  .cluster.types {
    max-width: 50rem;
    justify-content: center;
  }

  .text-step-3 {
    line-height: 1.15;
  }

  #slider-heading {
    margin-bottom: 1rem;
  }

  .center-items.flow {
    --flow-space: 2.5rem;
  }

  .paragraph.flow {
    max-width: var(--paragraph-measure);
  }

  .splide__slide a {
    display: flex;
    align-items: flex-end;
    position: relative;
    text-decoration: none;
    min-height: 20rem;
  }

  .slide-text {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 3rem;
    color: var(--color-primary-100);
    z-index: 2;
  }

  .slide-text.flow {
    --flow-space: 9px;
  }

  .slide-text p {
    font-size: var(--step-0);
    line-height: 1.5;
  }

  .overlay {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, var(--color-primary-900), transparent);
    border-radius: var(--rounded-corners);
    z-index: 1;
  }

  .img-wrapper {
    width: 100%;
    height: 100%;
    border-radius: var(--rounded-corners);
    overflow: hidden;
  }

  .splide__slide a:hover h3 {
    text-decoration: underline;
  }

  .img {
    width: 100%;
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .splide__slide a img {
    transition: all 0.3s ease;
  }

  .splide__slide a:hover img {
    transform: scale(1.1);
  }

  .splide__pagination {
    bottom: 0rem;
  }

  @media (max-width: 768px) {
    .cluster.types {
      --justify: center;
    }

    .splide__slide a {
      height: 360px;
    }

    .slide-text {
      height: 100%;
      padding: 2rem;
      justify-content: flex-end;
    }

    .overlay {
      height: 100%;
    }

    .frame.video {
      height: 100%;
      aspect-ratio: unset;
    }

    .splide__pagination {
      bottom: -2rem;
    }
  }
</style>

<script>
  import Splide from "@splidejs/splide";
  import "@splidejs/splide/css";

  const splide = new Splide(".resources-slider", {
    type: "loop",
    padding: "20%",
    perPage: 2,
    gap: "2em",
    // autoHeight: true,
    breakpoints: {
      1024: {
        padding: "20%",
      },
      768: {
        padding: "10%",
        gap: "1em",
      },
    },
  });
  splide.mount();
</script>
