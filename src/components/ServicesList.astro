---
import { Image } from "@astrojs/image/components";
import DateLabel from "./Events/DateLabel.astro";
import { capitalizeFirstLetter } from "../utils/format";
import getYouTubeID from "get-youtube-id";
import { joinTypes } from "../utils/format";

import bgImage from "../assets/images/church-ext-2.jpg";
import { DateTime } from "luxon";

const niceDate = (dateString) => {
  const date = new Date(dateString);
  const region = "en-US";
  const timeZone = "UTC";
  return {
    day: date.toLocaleDateString(region, {
      day: "numeric",
      timeZone: timeZone,
    }),
    month: date.toLocaleDateString(region, {
      month: "long",
      timeZone: timeZone,
    }),
    // time: date.toLocaleDateString(region, {
    //   timeStyle: "medium",
    // }),
  };
};

import placeholderImg from "../assets/images/worship.jpg";
const videoImg = "https://img.youtube.com/vi/Gh2c1aAQkJc/sddefault.jpg";

const { services } = Astro.props;
---

<ul class="flow">
  {
    services.map((service) => (
      <li>
        <a href={`/worship/services/${service.slug}`} class="service-wrapper">
          <div class="date-label-wrapper">
            <time class="date-label" datetime={service.date}>
              <div class="event-day font-header">
                {DateTime.fromISO(service.date)
                  .setZone("America/Los_Angeles")
                  .toFormat("d")}
              </div>
              <div class="small-title">
                {DateTime.fromISO(service.date)
                  .setZone("America/Los_Angeles")
                  .toFormat("LLL")}
              </div>
            </time>
            <Image src={bgImage} alt="" />
          </div>
          <div class="flow content">
            <div>
              <div class="small-title category">
                {joinTypes(service.serviceType)}
              </div>
              <h3 class="text-step-2">
                {service.name ? service.name : "Sunday Service"}
              </h3>
            </div>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad vel
              sint natus ea sit vero.
            </p>
          </div>
          <div class="frame video">
            <div class="icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 512 512"
                width="40"
                height="40"
                fill="var(--color-white)"
                aria-hidden="true"
              >
                <path d="M256 32a224 224 0 1 1 0 448 224 224 0 1 1 0-448zm0 480A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm72.7-256L208 329.7V182.3L328.7 256zM212.5 147.5c-7.4-4.5-16.7-4.7-24.3-.5s-12.3 12.3-12.3 20.9V344c0 8.7 4.7 16.7 12.3 20.9s16.8 4.1 24.3-.5l144-88c7.1-4.4 11.5-12.1 11.5-20.5s-4.4-16.1-11.5-20.5l-144-88z" />
              </svg>
            </div>
            <div class="overlay" />
            <img
              src={
                service.serviceType[0].video
                  ? `https://img.youtube.com/vi/${getYouTubeID(
                      service.serviceType[0].video.url
                    )}/sddefault.jpg`
                  : videoImg
              }
              alt=""
            />
          </div>
        </a>
      </li>
    ))
  }
</ul>

<style>
  ul.flow {
    --flow-space: var(--space-l);
  }

  a.service-wrapper {
    text-decoration: none;
    display: grid;
    grid-template-columns: 1fr 3fr 2fr;
    align-items: center;
    gap: 2rem;
    padding: 0.5rem;
    border-radius: var(--rounded-corners);
    border: 2px solid transparent;
    transition: all 0.2s ease;
  }

  a.service-wrapper:hover {
    box-shadow: var(--shadow-large);
  }

  .date-label-wrapper {
    position: relative;
    border-radius: var(--rounded-corners);
    align-self: stretch;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    align-items: center;
    background-color: var(--color-primary-100);
    overflow: hidden;
  }

  .date-label {
    position: relative;
    padding: 1rem;
    z-index: 2;
  }

  .date-label-wrapper img {
    position: absolute;
    z-index: 1;
    inset: 0;
    border-radius: var(--rounded-corners);
    filter: saturate(0);
    opacity: 1;
    mix-blend-mode: overlay;
  }

  .event-day {
    font-size: var(--step-5);
    color: var(--color-primary-800);
    line-height: 1;
  }

  .date-label .small-title {
    margin-top: 3px;
    color: var(--color-primary-800);
  }

  .small-title.category {
    font-size: 13px;
    display: inline-block;
    color: var(--color-primary-800);
    line-height: 1;
    padding: 4px 6px;
    margin-bottom: 8px;
    background-color: var(--color-primary-100);
    border-radius: var(--rounded-corners-small);
  }

  .frame {
    border-radius: var(--rounded-corners);
    max-width: 20rem;
    justify-self: end;
    position: relative;
  }

  .text-step-2 {
    margin-top: 6px;
  }

  .frame .icon {
    position: absolute;
    z-index: 2;
    inset: 0;
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
  }

  .frame .icon svg {
    transition: 0.2s all ease;
    opacity: 0;
  }

  .frame .overlay {
    position: absolute;
    inset: 0;
    opacity: 0.3;
    background: hsl(0deg 0% 0% / 10%);
    transition: 0.2s all ease-in;
  }

  a.service-wrapper:hover .frame .icon svg {
    transform: scale(1.25);
    opacity: 1;
  }

  a.service-wrapper:hover .frame .overlay {
    background: hsl(0deg 0% 0% / 80%);
  }

  a.service-wrapper:hover h3 {
    text-decoration: underline;
  }

  @media (max-width: 1024px) {
    a.service-wrapper {
      grid-template-columns: 1fr 1fr 1fr;
      column-gap: 1rem;
      row-gap: 2rem;
      max-width: 40rem;
    }

    .date-label-wrapper {
      grid-column: 1/2;
      grid-row: 1/2;
    }

    .frame {
      grid-column: 2/4;
      grid-row: 1/2;
      width: 100%;
      max-width: none;
      justify-self: start;
    }

    .content {
      grid-column: 1/4;
      grid-row: 2/2;
    }

    ul.flow {
      --flow-space: var(--space-2xl);
    }
  }

  @media (max-width: 768px) {
    .frame {
      max-width: none;
      justify-self: stretch;
    }

    a.service-wrapper {
      column-gap: 0.5rem;
      row-gap: 1rem;
    }
  }
</style>
