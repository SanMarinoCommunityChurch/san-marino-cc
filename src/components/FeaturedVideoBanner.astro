---
import Button from "./Button.astro";

import { getSanityData } from "../lib/sanity";
import { formatDateShort, getWeekday, timeFormatter } from "../utils/format";
import getYouTubeId from "get-youtube-id";

const homeYouTubeID = "https://www.youtube.com/live/Gh2c1aAQkJc?feature=share";
import churchBg from "../assets/images/church-ext-2.jpg";

const latestService =
  await getSanityData(`*[_type == 'service'] | order(date desc)[0] {
  ...,
  serviceType[] {
    ...,
    preacher->{
      name,
      "image": image.asset->
    }
  }
}`);

const compileServiceTypes = (array) => {
  const types = [];
  array.forEach((type) =>
    types.push(`${timeFormatter(type.serviceTime)} ${type.name}`)
  );
  return types;
};
---

<article class="video-banner">
  <div class="content-wrapper flex">
    <a href="/worship/live" class="video-link">
      <div class="frame video">
        <div class="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 512 512"
            width="40"
            height="40"
            fill="var(--color-white)"
            aria-hidden="true"
          >
            <path
              d="M256 32a224 224 0 1 1 0 448 224 224 0 1 1 0-448zm0 480A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm72.7-256L208 329.7V182.3L328.7 256zM212.5 147.5c-7.4-4.5-16.7-4.7-24.3-.5s-12.3 12.3-12.3 20.9V344c0 8.7 4.7 16.7 12.3 20.9s16.8 4.1 24.3-.5l144-88c7.1-4.4 11.5-12.1 11.5-20.5s-4.4-16.1-11.5-20.5l-144-88z"
            ></path></svg
          >
        </div>
        <div class="overlay"></div>
        <img
          src={`https://img.youtube.com/vi/${getYouTubeId(
            latestService.serviceType[0].video.url
          )}/sddefault.jpg`}
          width="300"
          height="225"
        />
      </div>
    </a>
    <div class="video-text flow">
      <div class="video-header flow">
        <div>
          <h2 class="small-title color-primary-200">
            {`This ${getWeekday(latestService.date)}`}
          </h2>
          <h3 class="text-step-3 color-white">
            {formatDateShort(latestService.date)}
          </h3>
        </div>
        <p>{compileServiceTypes(latestService.serviceType).join(" & ")}</p>
      </div>
      <div class="cluster">
        <Button href="/worship/live" theme="primary-light">Worship Live</Button>
        <a href="/worship/services" class="text-step--1">See all services</a>
      </div>
    </div>
  </div>
  <img src={churchBg} class="img-overlay" alt="" />
</article>

<style>
  .video-banner {
    position: relative;
    overflow-y: hidden;
    background: var(--color-primary-900);
    color: var(--color-primary-100);
    padding-block: var(--space-xl);
  }

  .video-banner .content-wrapper {
    position: relative;
    z-index: 2;
  }

  .video-banner .img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    height: clamp(150%, 50rem, 220%);
    object-fit: contain;
    opacity: 0.7;
    mix-blend-mode: multiply;
    filter: saturate(0);
    mask-image: linear-gradient(to right, black, transparent);
    -webkit-mask-image: linear-gradient(to right, black, transparent);
  }

  .video-banner .flex {
    align-items: center;
    justify-content: center;
    gap: var(--space-xl);
  }

  .video-banner .frame {
    position: relative;
    max-width: 24rem;
    border-radius: 4px;
  }

  .video-banner .frame .icon {
    position: absolute;
    z-index: 2;
    inset: 0;
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
  }

  .video-banner .frame .icon svg {
    transition: 0.2s all ease;
  }

  .video-banner .frame .overlay {
    position: absolute;
    inset: 0;
    opacity: 0.3;
    background: var(--color-primary-800);
    transition: 0.2s all ease-in;
  }

  .video-banner .video-link:hover .frame .overlay {
    opacity: 0.5;
  }

  .video-banner .video-link:hover .frame .icon svg {
    transform: scale(1.2);
  }

  .video-text.flow {
    --flow-space: var(--space-m);
  }

  .video-header.flow {
    --flow-space: var(--space-s);
  }

  .video-header h2 {
    margin-bottom: var(--space-3xs);
  }
</style>
